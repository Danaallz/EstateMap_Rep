<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the slot is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/holo_blue_dark" /> <!-- Background color when pressed -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@android:color/white" /> <!-- Default background color -->
            <stroke android:width="1dp" android:color="@android:color/darker_gray" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
