<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo Images -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/left_logo"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/ejar" />

            <ImageView
                android:id="@+id/right_logo"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:src="@drawable/unifiedcc"/>
        </LinearLayout>

        <!-- Main Title -->
        <TextView
            android:id="@+id/contract_terms_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232D51"
            android:gravity="center"
            android:padding="2dp"
            android:layout_marginTop="20dp"
            android:text="Contract Terms"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Section 1: Contract Information -->
        <TextView
            android:id="@+id/contract_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232D51"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:padding="2dp"
            android:text="1. Contract Information"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/contractTypeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contract Type"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/contractRegistryNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contract Registry Number"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/rentStartDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rent Start Date"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/rentEndDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rent End Date"/>
        </LinearLayout>

        <!-- Section 2: Landlord Information -->
        <TextView
            android:id="@+id/landlord_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232D51"
            android:gravity="center"
            android:padding="2dp"
            android:text="2. Landlord Information"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/landlordNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/landlordMobileEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/landlordIDEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID Number"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/landlordAddressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nationality"/>
        </LinearLayout>

        <!-- Section 3: Tenant Information -->
        <TextView
            android:id="@+id/tenant_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232D51"
            android:gravity="center"
            android:padding="2dp"
            android:text="3. Tenant Information"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/tenantNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/tenantMobileEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/tenantIDEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID Number"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/tenantAddressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nationality"/>
        </LinearLayout>



        <!-- Section 5: Property Information -->
        <TextView
            android:id="@+id/property_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232D51"
            android:gravity="center"
            android:padding="2dp"
            android:text="4. Property Information"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/propertyNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Property age"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/propertyTypeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Property Type"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/landAreaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Area"
                android:layout_marginBottom="5dp"/>
             </LinearLayout>

        <!-- Agreement Checkbox -->
        <CheckBox
            android:id="@+id/agree_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree all data is correct"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>